<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <com.yidan.cywapp.view.X5WebView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/web_jsjava"
            android:scrollbars="none"
            >
        </com.yidan.cywapp.view.X5WebView>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <Button  android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:id="@+id/bt_set_full"
                    android:gravity="center"
                    android:text="全屏播放" />
                <Button  android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:id="@+id/bt_set_small"
                    android:gravity="center"
                    android:text="小屏幕播放(默认)" />
            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <Button  android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:id="@+id/bt_close"
                    android:gravity="center"
                    android:text="关闭播放器\n" />
                <Button  android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:id="@+id/bt_jsjava_edit"
                    android:gravity="center"
                    android:text="刷新播放器\n(获取或加载视频失败)" />
            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="3dp">

                <TextView  android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/tv_desc"
                    android:gravity=""
                    android:text="播放器说明:\n如果播放失败，请点击刷新播放器,如果卡顿或者播放有问题,请关闭播放器再重新打开.\n"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
