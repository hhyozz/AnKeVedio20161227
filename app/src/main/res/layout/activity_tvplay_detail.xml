<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:background="@color/maincolor"
	android:layout_height="match_parent">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/poly_bg"
		android:scaleType="fitXY"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_height="match_parent">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="30dp"
					android:layout_height="180dp">

					<RelativeLayout
						android:id="@+id/rtl_img_logo"
						android:layout_width="150dp"
						android:layout_alignParentLeft="true"
						android:layout_height="match_parent">

						<ImageView
							android:id="@+id/img_icon"
							android:layout_width="150dp"
							android:layout_margin="5dp"
							android:scaleType="fitXY"
							android:layout_height="match_parent"/>

					</RelativeLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
						android:orientation="vertical"
						android:layout_toRightOf="@+id/rtl_img_logo"
						android:layout_height="match_parent">

						<TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="标题"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/title"
                            android:layout_marginLeft="10dp"/>
                        

                        <ScrollView
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:fadingEdge="none"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp">
                            
							<TextView
								android:id="@+id/tv_info"
								android:textColor="@color/white"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						</ScrollView>

					</LinearLayout>

				</RelativeLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:layout_marginTop="10dp"
					android:layout_height="80dp">

					<TextView
						android:id="@+id/tv_look"
						android:layout_width="wrap_content"
						android:text="关注"
						android:layout_weight="1"
						android:drawableTop="@mipmap/see"
						android:gravity="center"
						android:textColor="@color/white"
						android:layout_centerVertical="true"
						android:drawablePadding="5dp"
						android:layout_alignParentLeft="true"
						android:layout_marginLeft="15dp"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_collect"
						android:layout_width="wrap_content"
						android:visibility="gone"
						android:text="收藏"
						android:drawableTop="@mipmap/detail_star"
						android:gravity="center"
						android:layout_weight="1"
						android:textColor="@color/white"
						android:layout_centerVertical="true"
						android:drawablePadding="5dp"
						android:layout_alignParentLeft="true"
						android:layout_marginLeft="15dp"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_xz"
						android:layout_width="wrap_content"
						android:text="下载"
						android:layout_weight="1"
						android:drawableTop="@mipmap/download"
						android:gravity="center"
						android:textColor="@color/white"
						android:layout_centerVertical="true"
						android:layout_centerInParent="true"
						android:drawablePadding="5dp"
						android:layout_marginLeft="10dp"
						android:layout_height="wrap_content"/>

					<TextView
						android:layout_width="wrap_content"
						android:text="播放"
						android:drawableTop="@mipmap/play"
						android:layout_weight="1"
						android:gravity="center"
						android:textColor="@color/white"
						android:layout_centerVertical="true"
						android:drawablePadding="5dp"
						android:layout_marginRight="15dp"
						android:layout_alignParentRight="true"
						android:layout_height="wrap_content"/>

				</LinearLayout>

				<GridView
					android:id="@+id/gv_list"
					android:layout_margin="15dp"
					android:layout_width="match_parent"
					android:numColumns="5"
					android:layout_height="150dp"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="10dp"
					android:layout_height="match_parent">
                    <ScrollView
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:fadingEdge="none"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        
					<TextView
						android:id="@+id/tv_plot"
						android:layout_width="wrap_content"
						android:padding="10dp"
						android:textColor="@color/white"
						android:layout_height="wrap_content"/>

                    </ScrollView>
				</RelativeLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_download"
				android:layout_width="match_parent"
				android:visibility="gone"
				android:orientation="vertical"
				android:background="@color/black"
				android:layout_gravity="bottom"
				android:layout_height="match_parent">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="30dp">

					<TextView
						android:layout_width="wrap_content"
						android:text="离线缓存"
						android:textColor="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_centerVertical="true"
						android:layout_height="wrap_content"/>

					<ImageView
						android:id="@+id/img_close_download"
						android:layout_width="wrap_content"
						android:background="@mipmap/close"
						android:layout_centerVertical="true"
						android:padding="5dp"
						android:layout_alignParentRight="true"
						android:layout_marginRight="15dp"
						android:layout_height="wrap_content"/>

				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:background="@color/maincolor"
					android:layout_height="60dp">

					<RelativeLayout
						android:layout_width="70dp"
						android:background="@color/green"
						android:gravity="center"
						android:layout_centerVertical="true"
						android:layout_marginRight="20dp"
						android:layout_marginLeft="20dp"
						android:layout_marginTop="20dp"
						android:layout_gravity="center"
						android:layout_height="35dp"
						android:id="@+id/rtl_download_1080">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_margin="1dp"
							android:background="@color/maincolor"
							android:layout_height="match_parent">

							<TextView
								android:layout_width="wrap_content"
								android:text="1080P"
								android:textColor="@color/white"
								android:textSize="12sp"
								android:layout_centerInParent="true"
								android:layout_height="wrap_content"/>

						</RelativeLayout>

					</RelativeLayout>

					<RelativeLayout
						android:layout_width="70dp"
						android:background="@color/white"
						android:gravity="center"
						android:layout_centerVertical="true"
						android:layout_marginRight="50dp"
						android:layout_toRightOf="@+id/rtl_download_1080"
						android:layout_marginLeft="20dp"
						android:layout_marginTop="20dp"
						android:layout_height="35dp"
						android:id="@+id/rtl_download_720">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_margin="1dp"
							android:background="@color/maincolor"
							android:layout_height="match_parent">

							<TextView
								android:layout_width="wrap_content"
								android:text="1080P"
								android:textColor="@color/white"
								android:textSize="12sp"
								android:layout_centerInParent="true"
								android:layout_height="wrap_content"/>

						</RelativeLayout>

					</RelativeLayout>

				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/tv_download"
						android:layout_width="wrap_content"
						android:text="开始下载"
						android:textColor="@color/white"
						android:padding="10dp"
						android:layout_centerInParent="true"
						android:textSize="18sp"
						android:layout_height="wrap_content"/>

				</RelativeLayout>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</FrameLayout>

